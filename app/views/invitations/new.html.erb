<%= render 'layouts/application/card' do %>
  <h1 class="text-center text-2xl mb-8">Add User to <%= Current.user.organization.name %></h1>

  <%= form_with(model: @invitation) do |form| %>
    <% if @invitation.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(@invitation.errors.count, "error") %> prohibited this user from being saved:</h2>

        <ul>
          <% @invitation.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <%= form.hidden_field :token, value: @invitation.token %>

    <div class="mb-6">
      <%= form.label :email, class: "block text-sm" %>
      <%= form.email_field :email, value: @invitation.email, required: true, autofocus: true, autocomplete: "email", class: "mt-1 input" %>
    </div>

    <div>
      <%= form.submit "Invite", class: "btn-primary" %>
    </div>

  <% end %>


  <br>

  <div>
    <%= link_to "Back", root_path %>
  </div>
<% end %>
