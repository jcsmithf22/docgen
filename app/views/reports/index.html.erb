<% provide :title, "Reports" %>

<%= render 'layouts/application/main', page: 'Reports', organization: @organization.name do %>

  <div class="p-8">
    <h2 class="font-medium text-zinc-900">My Reports</h2>
    <% if @personal_reports.empty? %>
      <p>No reports available.</p>
    <% else %>
      <ul role="list" class="mt-3 grid grid-cols-2 gap-5 md:grid-cols-3 sm:gap-6 xl:grid-cols-6">
        <%= render ReportCardComponent.with_collection(@personal_reports) %>
      </ul>
    <% end %>
  </div>

  <div class="p-8">
    <h2 class="font-medium text-zinc-900">All Reports</h2>
    <% if @reports.empty? %>
      <p>No reports available.</p>
    <% else %>
      <ul role="list" class="divide-y divide-gray-100 bg-white rounded-md shadow-sm mt-3">
        <%= render ReportListItemComponent.with_collection(@reports) %>
      </ul>
    <% end %>
  </div>


<% end %>