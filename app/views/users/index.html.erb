<% provide :title, "Users" %>

<%= render 'shared/sidebar' %>

<div class="sm:ml-64">

  <% unless Current.user.verified %>
    <%= render "shared/notice", message: "Please verify your email" %>
  <% end %>

  <%= render "shared/bar", organization: @organization.name, page: "Users" %>

  <h1>All Users</h1>

  <ul>
    <% @users.each do |user| %>
      <li>
        <%= user.email %> - <%= user.role %>
        <!-- Add other user attributes you want to display here -->
      </li>
    <% end %>
  </ul>
</div>